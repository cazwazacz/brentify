{
  "manifest_version": 2,

  "name": "Brentify",
  "description": "This extension changes random sentences on the page to David Brent quotes.",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["quotes.js", "brentify.js"]
    }
  ],
  "browser_action": {},
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "assets/brentify_icon16.png",
    "48": "assets/brentify_icon48.png",
   "128": "assets/brentify_icon128.png"
  }
}
